<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
   <%- include('../includes/navigation.ejs', {user: user}) %>
    <main>
        <form class="grade-form" action="/admin/<% if (editing) { %>edit-user<% } else { %>add-user<% } %>" method="POST">
            <div class="form-control">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" value="<% if (editing) { %><%= us.username %><% } %>" required>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<% if (editing) { %><%= us.password %><% } %>" required>
            </div>
            <div class="form-control">
                <label for="imageUrl">Url Zdjecia</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= us.imageUrl %><% } %>" required>
            </div>
            <div>
                <input type="radio" id="Student" name="permission" value="0" <% if (editing) { if(permissionCode === 0) { %> checked <% }} %>>
                <label for="Student">Uczeń</label><br>
                <input type="radio" id="Teacher" name="permission" value="1" <% if (editing) { if(permissionCode === 1) { %> checked <% }} %>>
                <label for="Teacher">Nauczyciel</label><br>
                <input type="radio" id="Adminin" name="permission" value="2" <% if (editing) { if(permissionCode === 2) { %> checked <% }} %>>
                <label for="Adminin">Administrator</label>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= us.id %>" name="userId">
            <% } %>
            <button class="btn" type="submit"><% if (editing) { %>Edytuj Użytkownika<% } else { %>Dodaj Użytkownika<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>