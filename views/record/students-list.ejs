<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/users.css">
</head>
<body>
    <%- include('../includes/navigation.ejs', {user: user}) %>
    <main>
        <% if (users.length > 0) { %>
            <div class="grid">
                <% for (let user of users) { %>
                    <article class="card user-item">
                        <header class="card__header">
                            <h1 class="user__name"><%= user.username %></h1>
                        </header>
                        <div class="card__content">
                            <img src="<%= user.imageUrl %>" alt="<%= user.username %>" width="250">
                        </div>
                        <div class="card__actions">
                            <a href="/record/grades/<%= user.id %>" class="btn">Student Grades</a>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Users Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>